          <div class="card border border-gray-100">
            <div class="flex items-center gap-3 mb-4">
              <span class="text-3xl">{section.icon}</span>
              <h3 class="font-display font-bold text-lg text-gray-900">{section.title}</h3>
            </div>
            <ul class="space-y-2">
              {section.kpis.map((kpi) => (
                <li class="flex items-center gap-2 text-sm text-gray-600">
                  <svg class="w-4 h-4 text-accent-500 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                  </svg>
                  {kpi}
                </li>
              ))}
            </ul>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Decisions -->
  <section class="section-padding bg-white">
    <div class="section-container max-w-3xl mx-auto">
      <h2 class="section-title text-center mb-10">Welche Entscheidungen kannst du daraus ableiten?</h2>
      <div class="space-y-6">
        {[
          { kpi: 'Sinkende MAU', decision: 'Onboarding-Flow √ºberarbeiten, Re-Engagement-Kampagne starten oder Push-Notification-Strategie optimieren.' },
          { kpi: 'Crash Rate > 1%', decision: 'Sofortiger Bugfix-Sprint. Welche Ger√§tekonfigurationen sind betroffen? Was ist der Root Cause?' },
          { kpi: 'Hohe Churn Rate', decision: 'In-App Subscription Management verbessern, Win-Back-Flows einf√ºhren, Pricing √ºberdenken.' },
          { kpi: 'Schlechtes App Store Rating', decision: 'Systematische Review-Antworten, h√§ufige Kritikpunkte im n√§chsten Sprint adressieren.' },
          { kpi: 'Sitzungsdauer sinkt', decision: 'Welche Screens werden verlassen? Heatmap-Analyse, UX-√úberarbeitung der kritischen Flows.' },
        ].map((item) => (
          <div class="flex gap-4">
            <div class="flex-shrink-0 w-2 bg-brand-200 rounded-full"></div>
            <div>
              <p class="font-semibold text-gray-900 mb-1">KPI: {item.kpi}</p>
              <p class="text-gray-600 text-sm">‚Üí {item.decision}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="section-padding gradient-section">
    <div class="section-container text-center">
      <h2 class="section-title mb-4">Management Summary in deinem Paket</h2>
      <p class="section-subtitle mb-8">Der Management Summary ist in beiden App-Care Paketen enthalten ‚Äî Essentials und Growth.</p>
      <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
        <a href={`${import.meta.env.BASE_URL}pakete`} class="btn-primary">Pakete ansehen</a>
        <a href={`${import.meta.env.BASE_URL}kontakt`} class="btn-secondary">Gespr√§ch buchen</a>
      </div>
    </div>
  </section>
</BaseLayout>
