---
interface Props {
  href?: string;
  variant?: 'primary' | 'secondary' | 'ghost';
  size?: 'sm' | 'md' | 'lg';
  class?: string;
  target?: string;
  rel?: string;
}

const {
  href,
  variant = 'primary',
  size = 'md',
  class: className = '',
  target,
  rel,
} = Astro.props;

const sizeClasses = {
  sm: 'px-4 py-2 text-sm',
  md: 'px-6 py-3',
  lg: 'px-8 py-4 text-lg',
};

const variantClasses = {
  primary: 'btn-primary',
  secondary: 'btn-secondary',
  ghost: 'btn-ghost',
};

const classes = `${variantClasses[variant]} ${sizeClasses[size]} ${className}`;
const Tag = href ? 'a' : 'button';
---

{href ? (
  <a href={href} class={classes} target={target} rel={rel}>
    <slot />
  </a>
) : (
  <button class={classes}>
    <slot />
  </button>
)}
