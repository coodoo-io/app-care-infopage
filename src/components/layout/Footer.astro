---
import { version } from '../../../package.json';
const currentYear = new Date().getFullYear();
const base = import.meta.env.BASE_URL.replace(/\/?$/, '');

const links = {
  service: [
    { href: `${base}/leistungen`, label: 'Leistungen' },
    { href: `${base}/pakete`, label: 'Pakete & Preise' },
    { href: `${base}/management-summary`, label: 'Management Summary' },
    { href: `${base}/kpis`, label: 'App KPIs Ratgeber' },
  ],
  company: [
    { href: `${base}/team`, label: 'Team' },
    { href: `${base}/referenzen`, label: 'Referenzen' },
    { href: `${base}/blog`, label: 'Blog' },
    { href: `${base}/kontakt`, label: 'Kontakt' },
  ],
  legal: [
    { href: `${base}/impressum`, label: 'Impressum' },
    { href: `${base}/datenschutz`, label: 'Datenschutz' },
  ],
};
---

<footer class="bg-stone-950 text-stone-300">
  <div class="section-container py-12">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
      <!-- Brand -->
      <div class="md:col-span-1">
        <a href={import.meta.env.BASE_URL} class="inline-flex items-center gap-2 mb-4">
          <svg class="w-6 h-6" viewBox="0 0 100 100" fill="none" xmlns="http://www.w3.org/2000/svg">
            <rect width="100" height="100" rx="20" fill="#F97316"/>
            <rect x="38" y="58" width="11" height="24" rx="3" fill="white" fill-opacity="0.4"/>
            <rect x="52" y="44" width="11" height="38" rx="3" fill="white" fill-opacity="0.6"/>
            <rect x="66" y="28" width="11" height="54" rx="3" fill="white" fill-opacity="0.9"/>
            <polyline points="14,52 21,52 27,64 33,28 39,28 45,52" fill="none" stroke="white" stroke-width="4.5" stroke-linecap="round" stroke-linejoin="round" stroke-opacity="0.7"/>
          </svg>
          <span class="font-display font-extrabold text-lg text-white tracking-tight">App-Care</span>
        </a>
        <p class="text-sm text-stone-400 leading-relaxed mb-4">
          Dein Expertenteam für Mobile Apps. KPI-getrieben, messbar, monatlich kündbar.
        </p>
        <p class="text-xs text-stone-500">
          Ein Service der{' '}
          <a
            href="https://coodoo.de"
            target="_blank"
            rel="noopener noreferrer"
            class="text-stone-400 hover:text-white transition-colors underline"
          >
            coodoo GmbH
          </a>, Mainz
        </p>
      </div>

      <!-- Service Links -->
      <div>
        <h3 class="font-display font-semibold text-white mb-4 text-sm">Service</h3>
        <ul class="space-y-2">
          {links.service.map(link => (
            <li>
              <a href={link.href} class="text-sm text-stone-400 hover:text-white transition-colors">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Company Links -->
      <div>
        <h3 class="font-display font-semibold text-white mb-4 text-sm">Unternehmen</h3>
        <ul class="space-y-2">
          {links.company.map(link => (
            <li>
              <a href={link.href} class="text-sm text-stone-400 hover:text-white transition-colors">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Contact -->
      <div>
        <h3 class="font-display font-semibold text-white mb-4 text-sm">Kontakt</h3>
        <address class="not-italic text-sm text-stone-400 space-y-1">
          <a
            href="mailto:info@app-care.de"
            class="block text-brand-400 hover:text-brand-300 transition-colors"
          >
            info@app-care.de
          </a>
        </address>
        <a
          href={`${base}/kontakt`}
          class="inline-flex mt-4 items-center gap-1.5 text-sm font-medium text-brand-400 hover:text-brand-300 hover:gap-2 transition-all duration-200"
        >
          Gespräch buchen
          <svg class="w-3.5 h-3.5" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5 21 12m0 0-7.5 7.5M21 12H3" />
          </svg>
        </a>
      </div>
    </div>

    <div class="border-t border-stone-800 mt-10 pt-6 flex flex-col sm:flex-row items-center justify-between gap-3">
      <p class="text-xs text-stone-600">
        &copy; {currentYear} coodoo GmbH. (v{version})
      </p>
      <div class="flex items-center gap-4">
        {links.legal.map(link => (
          <a href={link.href} class="text-xs text-stone-600 hover:text-stone-400 transition-colors">
            {link.label}
          </a>
        ))}
      </div>
    </div>
  </div>
</footer>
