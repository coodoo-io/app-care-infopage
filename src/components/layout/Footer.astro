---
import { version } from '../../../package.json';
const currentYear = new Date().getFullYear();
const base = import.meta.env.BASE_URL.replace(/\/?$/, '');

const links = {
  service: [
    { href: `${base}/leistungen`, label: 'Leistungen' },
    { href: `${base}/pakete`, label: 'Pakete & Preise' },
    { href: `${base}/management-summary`, label: 'Management Summary' },
    { href: `${base}/kpis`, label: 'App KPIs Ratgeber' },
  ],
  company: [
    { href: `${base}/team`, label: 'Team' },
    { href: `${base}/referenzen`, label: 'Referenzen' },
    { href: `${base}/blog`, label: 'Blog' },
    { href: `${base}/kontakt`, label: 'Kontakt' },
  ],
  legal: [
    { href: `${base}/impressum`, label: 'Impressum' },
    { href: `${base}/datenschutz`, label: 'Datenschutz' },
  ],
};
---

<footer class="bg-stone-950 text-stone-300">
  <div class="section-container py-12">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
      <!-- Brand -->
      <div class="md:col-span-1">
        <a href={import.meta.env.BASE_URL} class="inline-flex items-center gap-2.5 mb-4">
          <img
            src={`${import.meta.env.BASE_URL.replace(/\/?$/, '')}/assets/app-care-logo.png`}
            alt=""
            class="h-8 w-8"
          />
          <span class="font-display font-extrabold text-lg text-white tracking-tight">App-Care</span>
        </a>
        <p class="text-sm text-stone-400 leading-relaxed mb-4">
          Monatliches Betreuungspaket für Mobile Apps — KPI-getrieben, messbar, verlässlich.
        </p>
        <p class="text-xs text-stone-500">
          Ein Service der{' '}
          <a
            href="https://coodoo.de"
            target="_blank"
            rel="noopener noreferrer"
            class="text-stone-400 hover:text-white transition-colors underline"
          >
            coodoo GmbH
          </a>
        </p>
      </div>

      <!-- Service Links -->
      <div>
        <h3 class="font-display font-semibold text-white mb-4">Service</h3>
        <ul class="space-y-2">
          {links.service.map(link => (
            <li>
              <a href={link.href} class="text-sm text-stone-400 hover:text-white transition-colors">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Company Links -->
      <div>
        <h3 class="font-display font-semibold text-white mb-4">Unternehmen</h3>
        <ul class="space-y-2">
          {links.company.map(link => (
            <li>
              <a href={link.href} class="text-sm text-stone-400 hover:text-white transition-colors">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Contact -->
      <div>
        <h3 class="font-display font-semibold text-white mb-4">Kontakt</h3>
        <address class="not-italic text-sm text-stone-400 space-y-1">
          <p>coodoo GmbH</p>
          <p>Mainz, Deutschland</p>
          <a
            href="mailto:info@app-care.de"
            class="block mt-2 text-brand-400 hover:text-brand-300 transition-colors"
          >
            info@app-care.de
          </a>
        </address>
        <a
          href={`${import.meta.env.BASE_URL.replace(/\/?$/, '')}/kontakt`}
          class="inline-flex mt-4 items-center gap-1 text-sm font-medium text-brand-400 hover:text-brand-300 transition-colors"
        >
          Gespräch buchen →
        </a>
      </div>
    </div>

    <div class="border-t border-stone-800 mt-10 pt-6 flex flex-col sm:flex-row items-center justify-between gap-3">
      <p class="text-xs text-stone-500">
        &copy; {currentYear} App-Care / coodoo GmbH. Alle Rechte vorbehalten. (v{version})
      </p>
      <div class="flex items-center gap-4">
        {links.legal.map(link => (
          <a href={link.href} class="text-xs text-stone-500 hover:text-stone-400 transition-colors">
            {link.label}
          </a>
        ))}
      </div>
    </div>
  </div>
</footer>
