---
import { version } from '../../../package.json';
const currentYear = new Date().getFullYear();
const base = import.meta.env.BASE_URL.replace(/\/?$/, '');

const links = {
  service: [
    { href: `${base}/leistungen`, label: 'Leistungen' },
    { href: `${base}/pakete`, label: 'Pakete & Preise' },
    { href: `${base}/management-summary`, label: 'Management Summary' },
    { href: `${base}/kpis`, label: 'App KPIs Ratgeber' },
  ],
  company: [
    { href: `${base}/team`, label: 'Team' },
    { href: `${base}/referenzen`, label: 'Referenzen' },
    { href: `${base}/blog`, label: 'Blog' },
    { href: `${base}/kontakt`, label: 'Kontakt' },
  ],
  legal: [
    { href: `${base}/impressum`, label: 'Impressum' },
    { href: `${base}/datenschutz`, label: 'Datenschutz' },
  ],
};
---

<footer class="bg-slate-950 text-slate-400">
  <div class="section-container py-14">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-10">
      <!-- Brand -->
      <div class="md:col-span-1">
        <a href={import.meta.env.BASE_URL} class="font-display font-extrabold text-lg text-white tracking-tight mb-4 block">
          App-Care<span class="text-brand-500">.</span>
        </a>
        <p class="text-sm leading-relaxed mb-4">
          Monatliches Betreuungspaket für Mobile Apps. KPI-getrieben, messbar, verlässlich.
        </p>
        <p class="text-xs text-slate-500">
          Ein Service der{' '}
          <a
            href="https://coodoo.de"
            target="_blank"
            rel="noopener noreferrer"
            class="text-slate-400 hover:text-white transition-colors underline decoration-1 underline-offset-2"
          >
            coodoo GmbH
          </a>
        </p>
      </div>

      <!-- Service Links -->
      <div>
        <h3 class="font-display font-bold text-white text-sm mb-4">Service</h3>
        <ul class="space-y-2.5">
          {links.service.map(link => (
            <li>
              <a href={link.href} class="text-sm hover:text-white transition-colors">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Company Links -->
      <div>
        <h3 class="font-display font-bold text-white text-sm mb-4">Unternehmen</h3>
        <ul class="space-y-2.5">
          {links.company.map(link => (
            <li>
              <a href={link.href} class="text-sm hover:text-white transition-colors">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Contact -->
      <div>
        <h3 class="font-display font-bold text-white text-sm mb-4">Kontakt</h3>
        <address class="not-italic text-sm space-y-1">
          <p>coodoo GmbH</p>
          <p>Mainz, Deutschland</p>
          <a
            href="mailto:info@app-care.de"
            class="block mt-3 text-brand-400 hover:text-brand-300 transition-colors"
          >
            info@app-care.de
          </a>
        </address>
        <a
          href={`${base}/kontakt`}
          class="inline-flex mt-4 items-center gap-1 text-sm font-medium text-brand-400 hover:text-brand-300 transition-colors"
        >
          Gespräch buchen
          <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" /></svg>
        </a>
      </div>
    </div>

    <div class="border-t border-slate-800 mt-10 pt-6 flex flex-col sm:flex-row items-center justify-between gap-3">
      <p class="text-xs text-slate-500">
        &copy; {currentYear} App-Care / coodoo GmbH (v{version})
      </p>
      <div class="flex items-center gap-4">
        {links.legal.map(link => (
          <a href={link.href} class="text-xs text-slate-500 hover:text-slate-300 transition-colors">
            {link.label}
          </a>
        ))}
      </div>
    </div>
  </div>
</footer>
