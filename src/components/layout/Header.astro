---
const base = import.meta.env.BASE_URL.replace(/\/?$/, '');

const navLinks = [
  { href: `${base}/leistungen`, label: 'Leistungen' },
  { href: `${base}/pakete`, label: 'Pakete' },
  { href: `${base}/referenzen`, label: 'Referenzen' },
  { href: `${base}/blog`, label: 'Blog' },
  { href: `${base}/kontakt`, label: 'Kontakt' },
];

const currentPath = Astro.url.pathname;
---

<header class="sticky top-0 z-50 bg-white/95 backdrop-blur-sm border-b border-gray-100">
  <div class="section-container">
    <nav class="flex items-center justify-between h-16">
      <!-- Logo -->
      <a href={import.meta.env.BASE_URL} class="flex items-center gap-2.5">
        <img
          src={`${import.meta.env.BASE_URL.replace(/\/?$/, '')}/assets/app-care-logo.png`}
          alt=""
          class="h-9 w-9"
        />
        <span class="font-display font-extrabold text-xl text-brand-950 tracking-tight">App-Care</span>
      </a>

      <!-- Desktop Navigation -->
      <div class="hidden md:flex items-center gap-1">
        {navLinks.map(link => (
          <a
            href={link.href}
            class={`px-4 py-2 rounded-lg text-sm font-medium transition-colors ${
              currentPath.startsWith(link.href)
                ? 'text-brand-600 bg-brand-50'
                : 'text-gray-600 hover:text-gray-900 hover:bg-gray-50'
            }`}
          >
            {link.label}
          </a>
        ))}
      </div>

      <!-- CTA -->
      <div class="flex items-center gap-3">
        <a
          href={`${import.meta.env.BASE_URL.replace(/\/?$/, '')}/kontakt`}
          class="hidden sm:inline-flex btn-primary px-4 py-2 text-sm"
        >
          Gespräch buchen
        </a>

        <!-- Mobile menu button -->
        <button
          id="mobile-menu-toggle"
          class="md:hidden p-2 rounded-lg text-gray-600 hover:text-gray-900 hover:bg-gray-50"
          aria-label="Menü öffnen"
          aria-expanded="false"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
    </nav>

    <!-- Mobile Navigation -->
    <div id="mobile-menu" class="hidden md:hidden border-t border-gray-100 py-3">
      {navLinks.map(link => (
        <a
          href={link.href}
          class={`block px-4 py-3 text-sm font-medium rounded-lg transition-colors ${
            currentPath.startsWith(link.href)
              ? 'text-brand-600 bg-brand-50'
              : 'text-gray-600 hover:text-gray-900 hover:bg-gray-50'
          }`}
        >
          {link.label}
        </a>
      ))}
      <div class="pt-3 px-4">
        <a href={`${import.meta.env.BASE_URL.replace(/\/?$/, '')}/kontakt`} class="btn-primary w-full text-sm">Gespräch buchen</a>
      </div>
    </div>
  </div>
</header>

<script>
  const toggle = document.getElementById('mobile-menu-toggle');
  const menu = document.getElementById('mobile-menu');

  toggle?.addEventListener('click', () => {
    const isOpen = !menu?.classList.contains('hidden');
    menu?.classList.toggle('hidden', isOpen);
    toggle.setAttribute('aria-expanded', String(!isOpen));
  });
</script>
