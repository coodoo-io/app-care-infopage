---
const base = import.meta.env.BASE_URL.replace(/\/?$/, '');

const navLinks = [
  { href: `${base}/leistungen`, label: 'Leistungen' },
  { href: `${base}/pakete`, label: 'Pakete' },
  { href: `${base}/referenzen`, label: 'Referenzen' },
  { href: `${base}/blog`, label: 'Blog' },
  { href: `${base}/kontakt`, label: 'Kontakt' },
];

const currentPath = Astro.url.pathname;
---

<header class="sticky top-0 z-50 bg-white border-b border-slate-200">
  <div class="section-container">
    <nav class="flex items-center justify-between h-16">
      <!-- Logo — pure typographic -->
      <a href={import.meta.env.BASE_URL} class="font-display font-extrabold text-xl text-slate-900 tracking-tight">
        App-Care<span class="text-brand-600">.</span>
      </a>

      <!-- Desktop Navigation -->
      <div class="hidden md:flex items-center gap-1">
        {navLinks.map(link => (
          <a
            href={link.href}
            class={`nav-link px-4 py-2 text-sm font-medium transition-colors relative ${
              currentPath.startsWith(link.href)
                ? 'text-brand-600'
                : 'text-slate-500 hover:text-slate-900'
            }`}
          >
            {link.label}
            {currentPath.startsWith(link.href) && (
              <span class="absolute bottom-0 left-4 right-4 h-0.5 bg-brand-600 rounded-full"></span>
            )}
          </a>
        ))}
      </div>

      <!-- CTA -->
      <div class="flex items-center gap-3">
        <a
          href={`${base}/kontakt`}
          class="hidden sm:inline-flex btn-primary px-4 py-2 text-xs"
        >
          Gespräch buchen
        </a>

        <!-- Mobile menu button -->
        <button
          id="mobile-menu-toggle"
          class="md:hidden p-2 rounded-lg text-slate-500 hover:text-slate-900 hover:bg-slate-50"
          aria-label="Menü öffnen"
          aria-expanded="false"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
    </nav>

    <!-- Mobile Navigation -->
    <div id="mobile-menu" class="hidden md:hidden border-t border-slate-200 py-3">
      {navLinks.map(link => (
        <a
          href={link.href}
          class={`block px-4 py-3 text-sm font-medium rounded-lg transition-colors ${
            currentPath.startsWith(link.href)
              ? 'text-brand-600 bg-brand-50'
              : 'text-slate-600 hover:text-slate-900 hover:bg-slate-50'
          }`}
        >
          {link.label}
        </a>
      ))}
      <div class="pt-3 px-4">
        <a href={`${base}/kontakt`} class="btn-primary w-full text-xs">Gespräch buchen</a>
      </div>
    </div>
  </div>
</header>

<style>
  .nav-link::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 1rem;
    right: 1rem;
    height: 2px;
    background: #2563eb;
    border-radius: 999px;
    transform: scaleX(0);
    transition: transform 200ms ease;
  }
  .nav-link:hover::after {
    transform: scaleX(1);
  }
</style>

<script>
  const toggle = document.getElementById('mobile-menu-toggle');
  const menu = document.getElementById('mobile-menu');

  toggle?.addEventListener('click', () => {
    const isOpen = !menu?.classList.contains('hidden');
    menu?.classList.toggle('hidden', isOpen);
    toggle.setAttribute('aria-expanded', String(!isOpen));
  });
</script>
