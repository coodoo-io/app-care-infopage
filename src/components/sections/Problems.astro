---

<section class="section-padding bg-white">
  <div class="section-container">
    <div class="text-center max-w-2xl mx-auto mb-16">
      <div class="flex items-center justify-center gap-3 mb-6">
        <span class="w-8 h-px bg-brand-600"></span>
        <span class="font-display text-xs font-bold tracking-widest uppercase text-brand-600">Leistungen</span>
        <span class="w-8 h-px bg-brand-600"></span>
      </div>
      <h2 class="section-title mb-4">
        Volles Potenzial für deine App
      </h2>
      <p class="section-subtitle">
        Die richtigen Daten, das richtige Team, die richtigen Prozesse.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {items.map((item) => (
        <div class="card group">
          <div class="flex items-center gap-3 mb-4">
            <div class="w-10 h-10 rounded-lg bg-brand-50 text-brand-600 flex items-center justify-center flex-shrink-0">
              <Fragment set:html={item.icon} />
            </div>
            <h3 class="font-display font-bold text-base text-slate-900">
              {item.title}
            </h3>
          </div>
          <p class="text-slate-500 text-sm leading-relaxed">
            {item.description}
          </p>
          {item.link && (
            <a
              href={`${import.meta.env.BASE_URL.replace(/\/?$/, '')}${item.link.href}`}
              class="inline-flex items-center gap-1 text-brand-600 text-xs font-semibold mt-4 hover:underline decoration-2 underline-offset-4"
            >
              {item.link.label}
              <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" /></svg>
            </a>
          )}
        </div>
      ))}
    </div>
  </div>
</section>
