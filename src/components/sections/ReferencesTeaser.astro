---
const base = import.meta.env.BASE_URL.replace(/\/?$/, '');

const references = [
  {
    app: 'WeatherPro App',
    category: 'Wetter & Lifestyle',
    kpis: [
      { label: 'Aktive Nutzer', before: '8.200', after: '12.400', change: '+51%' },
      { label: 'Crash-freie Sessions', before: '94,1%', after: '99,2%', change: '+5,1pp' },
      { label: 'App Store Rating', before: '3,8', after: '4,7', change: '+0,9' },
    ],
    testimonial: 'Endlich wissen wir, was in unserer App passiert. Der monatliche Report gibt uns Sicherheit und klare Handlungsempfehlungen.',
  },
  {
    app: 'HealthTrack App',
    category: 'Gesundheit & Fitness',
    kpis: [
      { label: 'Aktive Subscriptions', before: '340', after: '520', change: '+53%' },
      { label: 'Churn Rate', before: '8,2%', after: '4,1%', change: '-4,1pp' },
      { label: 'Session-Dauer', before: '4,2 Min', after: '6,8 Min', change: '+62%' },
    ],
    testimonial: 'App-Care hat uns geholfen, die wirklich wichtigen KPIs zu verstehen und gezielt daran zu arbeiten.',
  },
];
---

<section class="section-padding bg-stone-50">
  <div class="section-container">
    <div class="text-center max-w-2xl mx-auto mb-12">
      <span class="badge-gray mb-4 inline-block">Echte Ergebnisse</span>
      <h2 class="section-title mb-4">
        Apps die mit App-Care wachsen
      </h2>
      <p class="section-subtitle">
        Messbare Ergebnisse, die für sich sprechen — in Zahlen.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      {references.map((ref) => (
        <div class="card">
          <div class="flex items-start justify-between mb-6">
            <div>
              <h3 class="font-display font-bold text-stone-900">{ref.app}</h3>
              <span class="badge-gray text-xs mt-1">{ref.category}</span>
            </div>
          </div>

          <div class="space-y-3 mb-6">
            {ref.kpis.map((kpi) => (
              <div class="flex items-center justify-between text-sm">
                <span class="text-stone-500">{kpi.label}</span>
                <div class="flex items-center gap-3">
                  <span class="text-stone-400 line-through">{kpi.before}</span>
                  <span class="font-semibold text-stone-900">{kpi.after}</span>
                  <span class="badge-accent text-xs">{kpi.change}</span>
                </div>
              </div>
            ))}
          </div>

          <blockquote class="border-l-2 border-stone-200 pl-4 text-sm text-stone-500 italic">
            "{ref.testimonial}"
          </blockquote>
        </div>
      ))}
    </div>

    <div class="text-center mt-8">
      <a href={`${base}/referenzen`} class="inline-flex items-center gap-1.5 text-brand-600 font-semibold text-sm hover:gap-2.5 transition-all duration-200">
        Alle Referenzen ansehen
        <svg class="w-3.5 h-3.5" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5 21 12m0 0-7.5 7.5M21 12H3" />
        </svg>
      </a>
    </div>
  </div>
</section>
