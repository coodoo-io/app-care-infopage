---
const without = [
  'Dependencies veralten unbemerkt',
  'OS-Updates brechen Features',
  'Bewertungen sinken — niemand reagiert',
  'Bugs bleiben tagelang unentdeckt',
  'Store-Listings verlieren Sichtbarkeit',
  'Kein Überblick über KPIs',
];

const with_care = [
  'Regelmäßige Dependency-Updates',
  'Sofortige Reaktion bei Problemen',
  'Aktives Review-Monitoring',
  'Monatlicher KPI-Report mit Empfehlungen',
  'Kontinuierliche Store-Optimierung',
  'Zwei feste Ansprechpartner',
];
---

<section class="bg-stone-900 text-white section-padding relative overflow-hidden">
  <div class="section-container relative z-10">

    <div class="text-center max-w-2xl mx-auto mb-12">
      <span class="badge bg-white/10 text-stone-400 mb-4 inline-block">Vorher / Nachher</span>
      <h2 class="font-display font-bold text-3xl md:text-4xl text-white mb-4 tracking-tight">
        Nach dem Launch beginnt<br />die eigentliche Arbeit.
      </h2>
      <p class="text-stone-400 text-lg">
        Eine App ist nicht fertig, wenn sie live ist. Erst danach zeigt sich, ob sie wächst.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 max-w-4xl mx-auto">

      <!-- Ohne Betreuung -->
      <div class="bg-stone-800 border border-stone-700 rounded-xl p-6">
        <div class="flex items-center gap-3 mb-6">
          <div class="w-8 h-8 rounded-full bg-red-500/15 flex items-center justify-center flex-shrink-0">
            <svg class="w-4 h-4 text-red-400" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M6 18 18 6M6 6l12 12" />
            </svg>
          </div>
          <h3 class="font-display font-bold text-white">Ohne Betreuung</h3>
        </div>
        <ul class="space-y-3">
          {without.map((item) => (
            <li class="flex items-start gap-3">
              <svg class="w-4 h-4 text-red-400 flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="M6 18 18 6M6 6l12 12" />
              </svg>
              <span class="text-stone-400 text-sm leading-relaxed">{item}</span>
            </li>
          ))}
        </ul>
      </div>

      <!-- Mit App-Care -->
      <div class="bg-stone-800 border border-brand-500/30 rounded-xl p-6">
        <div class="flex items-center gap-3 mb-6">
          <div class="w-8 h-8 rounded-full bg-brand-500/15 flex items-center justify-center flex-shrink-0">
            <svg class="w-4 h-4 text-brand-400" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="m4.5 12.75 6 6 9-13.5" />
            </svg>
          </div>
          <h3 class="font-display font-bold text-white">Mit App-Care</h3>
        </div>
        <ul class="space-y-3">
          {with_care.map((item) => (
            <li class="flex items-start gap-3">
              <svg class="w-4 h-4 text-brand-400 flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="m4.5 12.75 6 6 9-13.5" />
              </svg>
              <span class="text-stone-200 text-sm leading-relaxed">{item}</span>
            </li>
          ))}
        </ul>
      </div>

    </div>
  </div>
</section>
