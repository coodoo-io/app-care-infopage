---
const without = [
  'Dependencies veralten unbemerkt',
  'OS-Updates brechen Features',
  'Bewertungen sinken — niemand reagiert',
  'Bugs bleiben tagelang unentdeckt',
  'Store-Listings verlieren Sichtbarkeit',
  'Kein Überblick über KPIs',
];

const with_care = [
  'Regelmäßige Dependency-Updates',
  'Sofortreaktion bei Problemen',
  'Aktives Review-Monitoring',
  'Monatlicher KPI-Report mit Handlungsempfehlungen',
  'Kontinuierliche Store-Optimierung',
  'Zwei feste Ansprechpartner',
];
---

<section class="bg-brand-950 text-white section-padding">
  <div class="section-container">

    <div class="text-center max-w-2xl mx-auto mb-16">
      <div class="flex items-center justify-center gap-3 mb-6">
        <span class="w-8 h-px bg-brand-400"></span>
        <span class="font-display text-xs font-bold tracking-widest uppercase text-brand-400">Realität nach dem Launch</span>
        <span class="w-8 h-px bg-brand-400"></span>
      </div>
      <h2 class="font-display font-bold text-3xl md:text-5xl text-white mb-4 tracking-tight">
        Live ist erst der Anfang.
      </h2>
      <p class="text-slate-400 text-lg">
        Ob deine App wächst oder still stirbt — das entscheidet sich nach dem Launch.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 max-w-4xl mx-auto">

      <!-- Ohne Betreuung -->
      <div class="bg-white/5 border border-white/10 rounded-xl p-6">
        <div class="flex items-center gap-3 mb-6">
          <div class="w-8 h-8 rounded-lg bg-red-500/15 flex items-center justify-center flex-shrink-0">
            <svg class="w-4 h-4 text-red-400" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M6 18 18 6M6 6l12 12" />
            </svg>
          </div>
          <h3 class="font-display font-bold text-white text-sm tracking-wide">Ohne Betreuung</h3>
        </div>
        <ul class="space-y-3">
          {without.map((item) => (
            <li class="flex items-start gap-3">
              <svg class="w-4 h-4 text-red-400/70 flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="M6 18 18 6M6 6l12 12" />
              </svg>
              <span class="text-slate-400 text-sm">{item}</span>
            </li>
          ))}
        </ul>
      </div>

      <!-- Mit App-Care -->
      <div class="bg-brand-600/10 border border-brand-500/20 rounded-xl p-6">
        <div class="flex items-center gap-3 mb-6">
          <div class="w-8 h-8 rounded-lg bg-brand-500/15 flex items-center justify-center flex-shrink-0">
            <svg class="w-4 h-4 text-brand-400" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="m4.5 12.75 6 6 9-13.5" />
            </svg>
          </div>
          <h3 class="font-display font-bold text-white text-sm tracking-wide">Mit App-Care</h3>
        </div>
        <ul class="space-y-3">
          {with_care.map((item) => (
            <li class="flex items-start gap-3">
              <svg class="w-4 h-4 text-brand-400 flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="m4.5 12.75 6 6 9-13.5" />
              </svg>
              <span class="text-slate-200 text-sm">{item}</span>
            </li>
          ))}
        </ul>
      </div>

    </div>
  </div>
</section>
