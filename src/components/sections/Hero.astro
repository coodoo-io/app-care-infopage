---
const base = import.meta.env.BASE_URL.replace(/\/?$/, '');

const metrics = [
  { label: 'MAU', value: '+51%', trend: 'up' },
  { label: 'Crash-frei', value: '99,2%', trend: 'stable' },
  { label: 'Store Rating', value: '4,8', trend: 'up' },
  { label: 'Subscriptions', value: '+53%', trend: 'up' },
  { label: 'Churn', value: '-50%', trend: 'down' },
  { label: 'Session-Dauer', value: '+62%', trend: 'up' },
];
---

<section class="bg-white pt-16 md:pt-24 pb-20 md:pb-32">
  <div class="section-container">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-20 items-center">

      <!-- Left: Message -->
      <div>
        <!-- Badge -->
        <div class="flex items-center gap-3 mb-8">
          <span class="w-1 h-6 bg-brand-600 rounded-full"></span>
          <span class="font-display text-xs font-bold tracking-widest uppercase text-brand-600">
            App-Betreuung
          </span>
        </div>

        <!-- Headline -->
        <h1 class="font-display font-extrabold text-4xl sm:text-5xl md:text-6xl lg:text-7xl leading-[1.05] tracking-tight text-slate-900 mb-6">
          Deine App.<br />
          Messbar <span class="text-brand-600">besser.</span>
        </h1>

        <!-- Subheadline -->
        <p class="text-lg md:text-xl text-slate-500 leading-relaxed mb-10 max-w-lg">
          Ein ganzes Expertenteam misst, analysiert und entwickelt deine Mobile App weiter. Jeden Monat. KPI-getrieben.
        </p>

        <!-- CTAs -->
        <div class="flex flex-col sm:flex-row items-start gap-4">
          <a href={`${base}/kontakt`} class="btn-primary px-8 py-4 text-sm">
            Gespr√§ch buchen
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
            </svg>
          </a>
          <a href={`${base}/pakete`} class="btn-secondary px-8 py-4 text-sm">
            Pakete ansehen
          </a>
        </div>

        <!-- Social proof -->
        <div class="mt-14 flex items-center gap-8 sm:gap-10">
          <div>
            <div class="font-display font-extrabold text-2xl text-slate-900">100+</div>
            <div class="text-xs text-slate-400 mt-0.5">Apps betreut</div>
          </div>
          <div class="w-px h-8 bg-slate-200"></div>
          <div>
            <div class="font-display font-extrabold text-2xl text-slate-900">500k+</div>
            <div class="text-xs text-slate-400 mt-0.5">App-Nutzer</div>
          </div>
          <div class="w-px h-8 bg-slate-200"></div>
          <div>
            <div class="font-display font-extrabold text-2xl text-slate-900">11</div>
            <div class="text-xs text-slate-400 mt-0.5">Experten im Team</div>
          </div>
        </div>
      </div>

      <!-- Right: KPI Dashboard Infographic -->
      <div class="relative">
        <div class="bg-white border border-slate-200 rounded-2xl p-6 sm:p-8 shadow-sm">
          <!-- Dashboard header -->
          <div class="flex items-center justify-between mb-6">
            <div>
              <div class="font-display text-xs font-bold tracking-widest uppercase text-slate-400">Dashboard</div>
              <div class="text-sm text-slate-500 mt-0.5">Letzte 30 Tage</div>
            </div>
            <div class="flex gap-1">
              <div class="w-2.5 h-2.5 rounded-full bg-brand-600"></div>
              <div class="w-2.5 h-2.5 rounded-full bg-slate-200"></div>
              <div class="w-2.5 h-2.5 rounded-full bg-slate-200"></div>
            </div>
          </div>

          <!-- Mini chart (SVG sparkline) -->
          <div class="mb-6 p-4 bg-slate-50 rounded-xl">
            <div class="flex items-end justify-between mb-3">
              <div>
                <div class="font-display text-2xl font-bold text-slate-900">12.847</div>
                <div class="text-xs text-slate-400">Monthly Active Users</div>
              </div>
              <span class="inline-flex items-center gap-1 text-xs font-bold text-brand-600 bg-brand-50 px-2 py-1 rounded-full">
                <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M5 15l7-7 7 7" /></svg>
                +51%
              </span>
            </div>
            <svg class="w-full h-16" viewBox="0 0 300 60" fill="none" preserveAspectRatio="none">
              <path d="M0 55 Q30 50, 60 45 T120 35 T180 25 T240 15 T300 5" stroke="#2563eb" stroke-width="2.5" fill="none" stroke-linecap="round" />
              <path d="M0 55 Q30 50, 60 45 T120 35 T180 25 T240 15 T300 5 V60 H0 Z" fill="url(#chart-grad)" />
              <defs>
                <linearGradient id="chart-grad" x1="0" y1="0" x2="0" y2="1">
                  <stop offset="0%" stop-color="#2563eb" stop-opacity="0.12" />
                  <stop offset="100%" stop-color="#2563eb" stop-opacity="0" />
                </linearGradient>
              </defs>
            </svg>
          </div>

          <!-- Metric grid -->
          <div class="grid grid-cols-3 gap-3">
            {metrics.map((m, i) => (
              <div class={`rounded-lg p-3 ${i === 0 ? 'bg-brand-50 border border-brand-200' : 'bg-slate-50'}`}>
                <div class="font-display text-lg font-bold text-slate-900">{m.value}</div>
                <div class="text-xs text-slate-400 mt-0.5">{m.label}</div>
              </div>
            ))}
          </div>
        </div>

        <!-- Decorative dot pattern -->
        <div class="absolute -z-10 -top-4 -right-4 w-24 h-24 opacity-30" aria-hidden="true">
          <svg width="96" height="96" viewBox="0 0 96 96" fill="none">
            {Array.from({ length: 36 }).map((_, i) => (
              <circle cx={8 + (i % 6) * 16} cy={8 + Math.floor(i / 6) * 16} r="2" fill="#94a3b8" />
            ))}
          </svg>
        </div>
      </div>

    </div>
  </div>
</section>
