  </div>
</dialog>

<script>
  const btn = document.getElementById('mgmt-summary-btn');
  const dialog = document.getElementById('mgmt-summary-dialog') as HTMLDialogElement;
  const closeBtn = document.getElementById('mgmt-summary-dialog-close');

  btn?.addEventListener('click', () => dialog?.showModal());
  closeBtn?.addEventListener('click', () => dialog?.close());
  dialog?.addEventListener('click', (e) => {
    if (e.target === dialog) dialog.close();
  });
</script>
