---
const pillars = [
  {
    title: 'Messen & Analysieren',
    description: 'Monatlicher Management Summary mit allen KPIs — aus Firebase, Crashlytics, App Store Connect und mehr.',
  },
  {
    title: 'Überwachen & Reagieren',
    description: 'Kontinuierliches Monitoring, Crash-Analyse und schnelle Reaktion bei kritischen Problemen.',
  },
  {
    title: 'Weiterentwickeln & Wachsen',
    description: 'Agile Entwicklung auf Basis von Nutzerfeedback und KPI-Daten.',
  },
  {
    title: 'Strategie & Empfehlungen',
    description: 'Aus Daten werden Entscheidungen: konkrete nächste Schritte mit erwartetem Impact.',
  },
];

const tools = [
  'Firebase', 'Crashlytics', 'App Store Connect', 'Google Play Console',
  'Mixpanel', 'Amplitude', 'Sentry',
  'Fastlane', 'Bitrise', 'GitHub Actions', 'TestFlight',
  'Figma', 'Jira', 'Confluence', 'Slack',
  'Flutter', 'React Native', 'Swift', 'Kotlin',
];
---

<section class="section-padding bg-slate-50">
  <div class="section-container">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">
      <!-- Left: Content -->
      <div>
        <div class="flex items-center gap-3 mb-6">
          <span class="w-8 h-px bg-brand-600"></span>
          <span class="font-display text-xs font-bold tracking-widest uppercase text-brand-600">Management Summary</span>
        </div>
        <h2 class="section-title mb-6">
          Jeden Monat weißt du, wo deine App steht.
        </h2>
        <p class="section-subtitle mb-10">
          Das Herzstück von App-Care: alle KPIs, Auffälligkeiten und konkrete nächste Schritte — verständlich aufbereitet.
        </p>

        <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 mb-10">
          {pillars.map((pillar) => (
            <div class="border-l-2 border-brand-600 pl-4">
              <h3 class="font-display font-bold text-slate-900 text-sm mb-1">{pillar.title}</h3>
              <p class="text-slate-500 text-sm leading-relaxed">{pillar.description}</p>
            </div>
          ))}
        </div>

        <div class="mb-8">
          <p class="font-display text-xs font-bold tracking-widest uppercase text-slate-400 mb-3">Tools & Technologien</p>
          <div class="flex flex-wrap gap-2">
            {tools.map((tool) => (
              <span class="badge-gray text-xs">{tool}</span>
            ))}
          </div>
        </div>

        <button
          id="mgmt-summary-btn"
          class="btn-primary inline-flex items-center gap-2"
        >
          <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M3 17a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm3.293-7.707a1 1 0 011.414 0L9 10.586V3a1 1 0 112 0v7.586l1.293-1.293a1 1 0 111.414 1.414l-3 3a1 1 0 01-1.414 0l-3-3a1 1 0 010-1.414z" clip-rule="evenodd" />
          </svg>
          Beispiel herunterladen
        </button>
      </div>

      <!-- Right: Screenshots -->
      <div class="flex flex-col gap-4">
        <div class="rounded-xl overflow-hidden shadow-lg border border-slate-200 -rotate-1">
          <img
            src={`${import.meta.env.BASE_URL.replace(/\/?$/, '')}/assets/mgmt-summary/meteosol-Management-Summary.jpg`}
            alt="Management Summary — Deckblatt meteosol"
            class="w-full"
          />
        </div>
        <div class="rounded-xl overflow-hidden shadow-md border border-slate-200 rotate-1">
          <img
            src={`${import.meta.env.BASE_URL.replace(/\/?$/, '')}/assets/mgmt-summary/meteosol-Management-Summary-nutzerdaten.png`}
            alt="Management Summary — Nutzerbasis & Engagement"
            class="w-full"
          />
        </div>
        <p class="text-center text-xs text-slate-400">Echtes Beispiel: meteosol App</p>
      </div>
    </div>
  </div>
</section>

<!-- Trust bar -->
<div class="bg-brand-950 py-12">
  <div class="section-container">
    <div class="grid grid-cols-1 sm:grid-cols-3 gap-8 text-center">
      <div class="flex flex-col items-center gap-3">
        <div class="w-12 h-12 rounded-lg bg-white/5 border border-white/10 flex items-center justify-center">
          <svg class="w-5 h-5 text-brand-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5"><path stroke-linecap="round" stroke-linejoin="round" d="M15 19.128a9.38 9.38 0 0 0 2.625.372 9.337 9.337 0 0 0 4.121-.952 4.125 4.125 0 0 0-7.533-2.493M15 19.128v-.003c0-1.113-.285-2.16-.786-3.07M15 19.128v.106A12.318 12.318 0 0 1 8.624 21c-2.331 0-4.512-.645-6.374-1.766l-.001-.109a6.375 6.375 0 0 1 11.964-3.07M12 6.375a3.375 3.375 0 1 1-6.75 0 3.375 3.375 0 0 1 6.75 0Zm8.25 2.25a2.625 2.625 0 1 1-5.25 0 2.625 2.625 0 0 1 5.25 0Z" /></svg>
        </div>
        <div>
          <p class="font-display font-bold text-white text-sm">Dein festes 2er-Team</p>
          <p class="text-slate-400 text-sm mt-1">Kennt deine App bis ins Detail.</p>
        </div>
      </div>
      <div class="flex flex-col items-center gap-3">
        <div class="w-12 h-12 rounded-lg bg-white/5 border border-white/10 flex items-center justify-center">
          <svg class="w-5 h-5 text-brand-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5"><path stroke-linecap="round" stroke-linejoin="round" d="M15 10.5a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z" /><path stroke-linecap="round" stroke-linejoin="round" d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1 1 15 0Z" /></svg>
        </div>
        <div>
          <p class="font-display font-bold text-white text-sm">Lokal in Mainz</p>
          <p class="text-slate-400 text-sm mt-1">Kein Off- oder Nearshore.</p>
        </div>
      </div>
      <div class="flex flex-col items-center gap-3">
        <div class="w-12 h-12 rounded-lg bg-white/5 border border-white/10 flex items-center justify-center">
          <svg class="w-5 h-5 text-brand-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5"><path stroke-linecap="round" stroke-linejoin="round" d="M11.48 3.499a.562.562 0 0 1 1.04 0l2.125 5.111a.563.563 0 0 0 .475.345l5.518.442c.499.04.701.663.321.988l-4.204 3.602a.563.563 0 0 0-.182.557l1.285 5.385a.562.562 0 0 1-.84.61l-4.725-2.885a.562.562 0 0 0-.586 0L6.982 20.54a.562.562 0 0 1-.84-.61l1.285-5.386a.562.562 0 0 0-.182-.557l-4.204-3.602a.562.562 0 0 1 .321-.988l5.518-.442a.563.563 0 0 0 .475-.345L11.48 3.5Z" /></svg>
        </div>
        <div>
          <p class="font-display font-bold text-white text-sm">Senior-Entwickler</p>
          <p class="text-slate-400 text-sm mt-1">Hunderte Apps. Ein Team.</p>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Dialog: PDF kommt bald -->
<dialog
  id="mgmt-summary-dialog"
  class="rounded-xl shadow-2xl p-8 max-w-sm w-full backdrop:bg-slate-900/50"
>
  <div class="flex flex-col items-center text-center gap-4">
    <div class="w-12 h-12 rounded-lg bg-brand-50 flex items-center justify-center">
      <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 text-brand-600" viewBox="0 0 20 20" fill="currentColor">
        <path fill-rule="evenodd" d="M3 17a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm3.293-7.707a1 1 0 011.414 0L9 10.586V3a1 1 0 112 0v7.586l1.293-1.293a1 1 0 111.414 1.414l-3 3a1 1 0 01-1.414 0l-3-3a1 1 0 010-1.414z" clip-rule="evenodd" />
      </svg>
    </div>
    <div>
      <h3 class="font-display font-bold text-slate-900 text-lg mb-2">Kommt bald</h3>
      <p class="text-slate-500 text-sm leading-relaxed">
        Das Beispiel-PDF steht in Kürze zum Download bereit. Sprich uns gerne direkt an — wir schicken es dir zu.
      </p>
    </div>
    <button
      id="mgmt-summary-dialog-close"
      class="text-sm text-slate-400 hover:text-slate-600 transition-colors"
    >
      Schließen
    </button>
  </div>
</dialog>

<script>
  const btn = document.getElementById('mgmt-summary-btn');
  const dialog = document.getElementById('mgmt-summary-dialog') as HTMLDialogElement;
  const closeBtn = document.getElementById('mgmt-summary-dialog-close');

  btn?.addEventListener('click', () => dialog?.showModal());
  closeBtn?.addEventListener('click', () => dialog?.close());
  dialog?.addEventListener('click', (e) => {
    if (e.target === dialog) dialog.close();
  });
</script>
