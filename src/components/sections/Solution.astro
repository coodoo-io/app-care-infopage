<section class="section-padding bg-slate-50">
  <div class="section-container">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-20 items-center">
      <!-- Left: Content -->
      <div>
        <div class="flex items-center gap-3 mb-6">
          <span class="w-8 h-px bg-brand-600"></span>
          <span class="font-display text-xs font-bold tracking-widest uppercase text-brand-600">Management Summary</span>
        </div>
        <h2 class="section-title mb-6">
          Jeden Monat weißt du, wo deine App steht.
        </h2>
        <p class="section-subtitle mb-10">
          Das Herzstück von App-Care: alle KPIs, Auffälligkeiten und konkrete Empfehlungen — verständlich aufbereitet als monatlicher Report.
        </p>

        <ul class="space-y-4 mb-10">
          <li class="flex items-start gap-3">
            <span class="w-1.5 h-1.5 rounded-full bg-brand-600 mt-2 flex-shrink-0"></span>
            <span class="text-slate-600 text-sm leading-relaxed">Nutzerbasis, Engagement und Retention auf einen Blick</span>
          </li>
          <li class="flex items-start gap-3">
            <span class="w-1.5 h-1.5 rounded-full bg-brand-600 mt-2 flex-shrink-0"></span>
            <span class="text-slate-600 text-sm leading-relaxed">Crash-Analysen, Performance-Daten, Store-Ratings</span>
          </li>
          <li class="flex items-start gap-3">
            <span class="w-1.5 h-1.5 rounded-full bg-brand-600 mt-2 flex-shrink-0"></span>
            <span class="text-slate-600 text-sm leading-relaxed">Konkrete nächste Schritte mit erwartetem Impact</span>
          </li>
        </ul>

        <button
          id="mgmt-summary-btn"
          class="btn-primary inline-flex items-center gap-2"
        >
          Beispiel herunterladen
        </button>
      </div>

      <!-- Right: PDF Preview -->
      <div class="flex justify-center">
        <div class="relative max-w-sm w-full">
          <!-- Shadow / depth layer -->
          <div class="absolute inset-0 translate-x-3 translate-y-3 bg-slate-200 rounded-lg"></div>
          <!-- PDF page -->
          <div class="relative rounded-lg overflow-hidden shadow-lg border border-slate-200 bg-white">
            <img
              src={`${import.meta.env.BASE_URL.replace(/\/?$/, '')}/assets/mgmt-summary/meteosol-Management-Summary.jpg`}
              alt="Management Summary — Beispiel meteosol"
              class="w-full"
            />
          </div>
          <p class="text-center text-xs text-slate-400 mt-6">Echtes Beispiel: meteosol App</p>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Trust bar -->
<div class="bg-brand-950 py-12">
  <div class="section-container">
    <div class="grid grid-cols-1 sm:grid-cols-3 gap-8 text-center">
      <div>
        <p class="font-display font-bold text-white text-sm">Dein festes 2er-Team</p>
        <p class="text-slate-400 text-sm mt-1">Kennt deine App bis ins Detail.</p>
      </div>
      <div>
        <p class="font-display font-bold text-white text-sm">Lokal in Mainz</p>
        <p class="text-slate-400 text-sm mt-1">Kein Off- oder Nearshore.</p>
      </div>
      <div>
        <p class="font-display font-bold text-white text-sm">Senior-Entwickler</p>
        <p class="text-slate-400 text-sm mt-1">Hunderte Apps. Ein Team.</p>
      </div>
    </div>
  </div>
</div>

<!-- Dialog: PDF kommt bald -->
<dialog
  id="mgmt-summary-dialog"
  class="rounded-xl shadow-2xl p-8 max-w-sm w-full backdrop:bg-slate-900/50"
>
  <div class="flex flex-col items-center text-center gap-4">
    <div>
      <h3 class="font-display font-bold text-slate-900 text-lg mb-2">Kommt bald</h3>
      <p class="text-slate-500 text-sm leading-relaxed">
        Das Beispiel-PDF steht in Kürze zum Download bereit. Sprich uns gerne direkt an — wir schicken es dir zu.
      </p>
    </div>
    <button
      id="mgmt-summary-dialog-close"
      class="text-sm text-slate-400 hover:text-slate-600 transition-colors"
    >
      Schließen
    </button>
  </div>
</dialog>

<script>
  const btn = document.getElementById('mgmt-summary-btn');
  const dialog = document.getElementById('mgmt-summary-dialog') as HTMLDialogElement;
  const closeBtn = document.getElementById('mgmt-summary-dialog-close');

  btn?.addEventListener('click', () => dialog?.showModal());
  closeBtn?.addEventListener('click', () => dialog?.close());
  dialog?.addEventListener('click', (e) => {
    if (e.target === dialog) dialog.close();
  });
</script>
