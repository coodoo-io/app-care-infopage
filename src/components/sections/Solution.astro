---
const base = import.meta.env.BASE_URL.replace(/\/?$/, '');

const pillars = [
  {
    title: 'Messen & Analysieren',
    description: 'Alle wichtigen KPIs aus Firebase, Crashlytics und App Store Connect — monatlich aufbereitet.',
  },
  {
    title: 'Überwachen & Reagieren',
    description: 'Monitoring, Crash-Analyse und schnelle Reaktion bei kritischen Problemen.',
  },
  {
    title: 'Weiterentwickeln & Wachsen',
    description: 'Agile Weiterentwicklung basierend auf Nutzerfeedback und KPI-Daten.',
  },
  {
    title: 'Strategie & Empfehlungen',
    description: 'Konkrete nächste Schritte mit Begründung und erwartetem Impact.',
  },
];

const tools = [
  'Firebase', 'Crashlytics', 'App Store Connect', 'Google Play Console',
  'Mixpanel', 'Amplitude', 'Sentry',
  'Fastlane', 'Bitrise', 'GitHub Actions', 'TestFlight',
  'Figma', 'Jira', 'Confluence', 'Slack',
  'Flutter', 'React Native', 'Swift', 'Kotlin',
];
---

<section class="section-padding bg-stone-50">
  <div class="section-container">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">
      <!-- Left: Content -->
      <div>
        <span class="badge-gray mb-4 inline-block">Management Summary</span>
        <h2 class="section-title mb-6">
          Jeden Monat weißt du,<br />wo deine App steht.
        </h2>
        <p class="section-subtitle mb-8">
          KPIs, Auffälligkeiten und konkrete nächste Schritte — verständlich aufbereitet, ohne dass du selbst in die Daten musst.
        </p>

        <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 mb-8">
          {pillars.map((pillar) => (
            <div class="border-l-2 border-stone-300 pl-4">
              <h3 class="font-semibold text-stone-900 text-sm mb-1">{pillar.title}</h3>
              <p class="text-stone-500 text-sm leading-relaxed">{pillar.description}</p>
            </div>
          ))}
        </div>

        <div>
          <p class="text-sm text-stone-400 mb-3 font-medium">Unsere Tools:</p>
          <div class="flex flex-wrap gap-2">
            {tools.map((tool) => (
              <span class="badge-gray text-xs">{tool}</span>
            ))}
          </div>
        </div>

        <div class="mt-8">
          <button
            id="mgmt-summary-btn"
            class="btn-primary inline-flex items-center gap-2"
          >
            <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M3 17a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm3.293-7.707a1 1 0 011.414 0L9 10.586V3a1 1 0 112 0v7.586l1.293-1.293a1 1 0 111.414 1.414l-3 3a1 1 0 01-1.414 0l-3-3a1 1 0 010-1.414z" clip-rule="evenodd" />
            </svg>
            Beispiel Management Summary herunterladen
          </button>
        </div>

      </div>

      <!-- Right: Two slides stacked vertically -->
      <div class="flex flex-col gap-4">
        <div class="rounded-xl overflow-hidden shadow-xl border border-stone-200">
          <img
            src={`${base}/assets/mgmt-summary/meteosol-Management-Summary.jpg`}
            alt="Management Summary — Deckblatt meteosol"
            class="w-full"
          />
        </div>
        <div class="rounded-xl overflow-hidden shadow-lg border border-stone-200">
          <img
            src={`${base}/assets/mgmt-summary/meteosol-Management-Summary-nutzerdaten.png`}
            alt="Management Summary — Nutzerbasis & Engagement"
            class="w-full"
          />
        </div>
        <p class="text-center text-xs text-stone-400">Echtes Beispiel: Management Summary der meteosol App</p>
      </div>
    </div>
  </div>
</section>

<div class="bg-stone-900 py-12">
  <div class="section-container">
    <div class="grid grid-cols-1 sm:grid-cols-3 gap-8 text-center">
      <div class="flex flex-col items-center gap-4">
        <div class="w-14 h-14 rounded-xl bg-white/10 flex items-center justify-center">
          <svg class="w-6 h-6 text-stone-300" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M18 18.72a9.094 9.094 0 0 0 3.741-.479 3 3 0 0 0-4.682-2.72m.94 3.198.001.031c0 .225-.012.447-.037.666A11.944 11.944 0 0 1 12 21c-2.17 0-4.207-.576-5.963-1.584A6.062 6.062 0 0 1 6 18.719m12 0a5.971 5.971 0 0 0-.941-3.197m0 0A5.995 5.995 0 0 0 12 12.75a5.995 5.995 0 0 0-5.058 2.772m0 0a3 3 0 0 0-4.681 2.72 8.986 8.986 0 0 0 3.74.477m.94-3.197a5.971 5.971 0 0 0-.94 3.197M15 6.75a3 3 0 1 1-6 0 3 3 0 0 1 6 0Zm6 3a2.25 2.25 0 1 1-4.5 0 2.25 2.25 0 0 1 4.5 0Zm-13.5 0a2.25 2.25 0 1 1-4.5 0 2.25 2.25 0 0 1 4.5 0Z" />
          </svg>
        </div>
        <div>
          <p class="font-display font-bold text-white text-lg">Festes 2er-Team</p>
          <p class="text-stone-400 text-sm mt-1">Kennt deine App im Detail.</p>
        </div>
      </div>
      <div class="flex flex-col items-center gap-4">
        <div class="w-14 h-14 rounded-xl bg-white/10 flex items-center justify-center">
          <svg class="w-6 h-6 text-stone-300" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M15 10.5a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z" />
            <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1 1 15 0Z" />
          </svg>
        </div>
        <div>
          <p class="font-display font-bold text-white text-lg">Lokal in Mainz</p>
          <p class="text-stone-400 text-sm mt-1">Kein Off- oder Nearshore</p>
        </div>
      </div>
      <div class="flex flex-col items-center gap-4">
        <div class="w-14 h-14 rounded-xl bg-white/10 flex items-center justify-center">
          <svg class="w-6 h-6 text-stone-300" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M11.48 3.499a.562.562 0 0 1 1.04 0l2.125 5.111a.563.563 0 0 0 .475.345l5.518.442c.499.04.701.663.321.988l-4.204 3.602a.563.563 0 0 0-.182.557l1.285 5.385a.562.562 0 0 1-.84.61l-4.725-2.885a.562.562 0 0 0-.586 0L6.982 20.54a.562.562 0 0 1-.84-.61l1.285-5.386a.562.562 0 0 0-.182-.557l-4.204-3.602a.562.562 0 0 1 .321-.988l5.518-.442a.563.563 0 0 0 .475-.345L11.48 3.5Z" />
          </svg>
        </div>
        <div>
          <p class="font-display font-bold text-white text-lg">Senior-Level</p>
          <p class="text-stone-400 text-sm mt-1">Hunderte Apps. Ein Team.</p>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Dialog: PDF kommt bald -->
<dialog
  id="mgmt-summary-dialog"
  class="rounded-xl shadow-2xl p-8 max-w-sm w-full backdrop:bg-stone-900/50 backdrop:backdrop-blur-sm"
>
  <div class="flex flex-col items-center text-center gap-4">
    <div class="w-12 h-12 rounded-full bg-brand-50 flex items-center justify-center">
      <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 text-brand-500" viewBox="0 0 20 20" fill="currentColor">
        <path fill-rule="evenodd" d="M3 17a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm3.293-7.707a1 1 0 011.414 0L9 10.586V3a1 1 0 112 0v7.586l1.293-1.293a1 1 0 111.414 1.414l-3 3a1 1 0 01-1.414 0l-3-3a1 1 0 010-1.414z" clip-rule="evenodd" />
      </svg>
    </div>
    <div>
      <h3 class="font-display font-bold text-stone-900 text-lg mb-2">Kommt bald</h3>
      <p class="text-stone-500 text-sm leading-relaxed">
        Das Beispiel-PDF steht in Kürze zum Download bereit. Bis dahin kannst du uns einfach direkt ansprechen — wir schicken es dir gerne zu.
      </p>
    </div>
    <button
      id="mgmt-summary-dialog-close"
      class="text-sm text-stone-400 hover:text-stone-600 transition-colors"
    >
      Schließen
    </button>
  </div>
</dialog>

<script>
  const btn = document.getElementById('mgmt-summary-btn');
  const dialog = document.getElementById('mgmt-summary-dialog') as HTMLDialogElement;
  const closeBtn = document.getElementById('mgmt-summary-dialog-close');

  btn?.addEventListener('click', () => dialog?.showModal());
  closeBtn?.addEventListener('click', () => dialog?.close());
  dialog?.addEventListener('click', (e) => {
    if (e.target === dialog) dialog.close();
  });
</script>
