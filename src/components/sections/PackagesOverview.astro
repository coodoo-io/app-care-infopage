---
const base = import.meta.env.BASE_URL.replace(/\/?$/, '');

const packages = [
  {
    name: 'Insight',
    price: '299',
    period: '/Monat',
    subtitle: 'Überblick',
    description: 'Wissen, wo deine App steht — mit monatlichem Report und konkreten Empfehlungen.',
    minDuration: 'Min. 3 Monate, danach monatlich kündbar',
    highlights: [
      'Monatlicher Management Summary',
      'KPI-Auswertung (Firebase, Crashlytics)',
      'App Store Connect Analyse',
      'Handlungsempfehlungen',
      'Monatliches Review-Gespräch',
      'E-Mail Support',
    ],
    cta: 'Insight starten',
    ctaHref: `${base}/kontakt?paket=insight`,
    featured: false,
  },
  {
    name: 'Essentials',
    price: '3.500',
    period: '/Monat',
    subtitle: 'Weiterentwicklung',
    description: 'Monitoring, Bugfixing und stetige Weiterentwicklung — in einem festen Rhythmus.',
    minDuration: 'Min. 3 Monate, danach monatlich kündbar',
    highlights: [
      'Alles aus Insight',
      'Aktiver 2nd Level Support',
      'Crash-Monitoring & Bugfixing',
      'Stetige Weiterentwicklung',
      'Eigenes Task-Board',
      'Direktkanal (Slack/Teams)',
    ],
    cta: 'Essentials starten',
    ctaHref: `${base}/kontakt?paket=essentials`,
    featured: true,
  },
  {
    name: 'Growth',
    price: '7.000',
    period: '/Monat',
    subtitle: 'Intensiv',
    description: 'Maximaler Fokus, maximales Tempo. Für Feature-Sprints, Portierungen und Vollgas-Phasen.',
    minDuration: 'Min. 3 Monate, danach monatlich kündbar',
    highlights: [
      'Alles aus Essentials',
      'Projektmanagement inklusive',
      'Intensive Feature-Planung',
      'Fachliche Ausarbeitung',
      'Tests & Release Management',
    ],
    cta: 'Growth starten',
    ctaHref: `${base}/kontakt?paket=growth`,
    featured: false,
  },
];
---

<section class="section-padding bg-white">
  <div class="section-container">
    <div class="text-center max-w-2xl mx-auto mb-16">
      <div class="flex items-center justify-center gap-3 mb-6">
        <span class="w-8 h-px bg-brand-600"></span>
        <span class="font-display text-xs font-bold tracking-widest uppercase text-brand-600">Pakete</span>
        <span class="w-8 h-px bg-brand-600"></span>
      </div>
      <h2 class="section-title mb-4">
        Klare Preise. Kein Risiko.
      </h2>
      <p class="section-subtitle">
        Günstiger als ein Festangestellter — und du bekommst ein ganzes Expertenteam.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 max-w-5xl mx-auto">
      {packages.map((pkg) => (
        <div class={`rounded-xl p-8 relative transition-all duration-300 ${pkg.featured ? 'bg-brand-950 text-white border-2 border-brand-800 shadow-xl hover:-translate-y-1 hover:shadow-2xl' : 'bg-white border-2 border-slate-200 hover:-translate-y-1 hover:shadow-lg hover:border-slate-300'}`}>
          {pkg.featured && (
            <div class="absolute -top-3 left-1/2 -translate-x-1/2">
              <span class="bg-brand-600 text-white text-xs font-display font-bold tracking-wider uppercase px-4 py-1 rounded-full">Empfohlen</span>
            </div>
          )}

          <div class="mb-6">
            <p class={`font-display text-xs font-bold tracking-widest uppercase mb-2 ${pkg.featured ? 'text-brand-400' : 'text-brand-600'}`}>{pkg.subtitle}</p>
            <h3 class={`font-display font-bold text-xl mb-3 ${pkg.featured ? 'text-white' : 'text-slate-900'}`}>{pkg.name}</h3>
            <div class="flex items-baseline gap-1">
              <span class={`font-display font-extrabold text-4xl ${pkg.featured ? 'text-white' : 'text-slate-900'}`}>{pkg.price}€</span>
              <span class={`text-sm ${pkg.featured ? 'text-slate-400' : 'text-slate-400'}`}>{pkg.period}</span>
            </div>
            <p class={`text-xs mt-2 ${pkg.featured ? 'text-slate-400' : 'text-slate-400'}`}>{pkg.minDuration}</p>
          </div>

          <p class={`text-sm leading-relaxed mb-6 ${pkg.featured ? 'text-slate-300' : 'text-slate-500'}`}>
            {pkg.description}
          </p>

          <ul class="space-y-3 mb-8">
            {pkg.highlights.map((item) => (
              <li class="flex items-start gap-2 text-sm">
                <svg class={`w-4 h-4 mt-0.5 flex-shrink-0 ${pkg.featured ? 'text-brand-400' : 'text-brand-600'}`} fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                </svg>
                <span class={pkg.featured ? 'text-slate-300' : 'text-slate-600'}>{item}</span>
              </li>
            ))}
          </ul>

          <a
            href={pkg.ctaHref}
            class={`block w-full text-center font-display font-bold text-sm tracking-wide uppercase py-3 px-6 rounded-lg transition-all duration-200 hover:-translate-y-px ${
              pkg.featured
                ? 'bg-brand-600 text-white hover:bg-brand-500 hover:shadow-md'
                : 'bg-brand-600 text-white hover:bg-brand-700 hover:shadow-md'
            }`}
          >
            {pkg.cta}
          </a>
        </div>
      ))}
    </div>

    <div class="text-center mt-10">
      <a href={`${base}/pakete`} class="text-brand-600 font-semibold hover:underline decoration-2 underline-offset-4 text-sm inline-flex items-center gap-1">
        Detaillierter Paketvergleich
        <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" /></svg>
      </a>
    </div>
  </div>
</section>
